# ==========================================
# Price Alert Bot Configuration
# ==========================================

# General Settings
TIMEZONE=Asia/Shanghai

# Telegram Configuration
TELEGRAM_ALERT_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALERT_CHAT_ID=your_chat_id_here

# ------------------------------------------
# 1. Price Spread Monitor (Spot vs Futures)
# ------------------------------------------
ALERT_TICKER=SOL                    # Monitor Symbol (e.g. SOL, BTC, ETH)
ALERT_THRESHOLD_PCT=2.0             # Spread Threshold % (e.g. 2.0 = 2%)
ALERT_CHECK_INTERVAL=1              # Check Interval (seconds)
ALERT_TYPE=telegram                 # Alert Type: telegram
ALERT_COOLDOWN=0                    # Alert Cooldown (seconds), 0 = no cooldown
ALERT_INTERVAL=1                    # Interval between alerts during sustained breach (seconds)

# ------------------------------------------
# 2. Volatility Monitor
# ------------------------------------------
VOLATILITY_ENABLED=true             # Enable Volatility Monitor
VOLATILITY_TICKER=BTC               # Monitor Symbol
VOLATILITY_TIME_WINDOW_SEC=60       # Time Window (seconds)
VOLATILITY_THRESHOLD_PCT=1.0        # Volatility Threshold %
VOLATILITY_CHECK_INTERVAL=1         # Check Interval (seconds)

# ------------------------------------------
# 3. Position Monitor (Risk Exposure)
# ------------------------------------------
POSITION_MONITOR_ENABLED=true
POSITION_MONITOR_SYMBOL=SOL         # Symbol to monitor
POSITION_DIFF_THRESHOLD=1.0         # Net Exposure Threshold (Spot + Futures)
POSITION_CHECK_INTERVAL=60          # Check Interval (seconds)

# Account 1
BP_ACCOUNT1_NAME=MainAccount
BP_ACCOUNT1_KEY=your_backpack_api_key
BP_ACCOUNT1_SECRET=your_backpack_api_secret

# Account 2 (Optional)
# BP_ACCOUNT2_NAME=SubAccount
# BP_ACCOUNT2_KEY=...
# BP_ACCOUNT2_SECRET=...

# ------------------------------------------
# 4. Price Target Monitor (Single)
# ------------------------------------------
PRICE_TARGET_ENABLED=false
PRICE_TARGET_EXCHANGE=bybit         # Exchange: bybit
PRICE_TARGET_SYMBOL=MMTUSDT         # Symbol
PRICE_TARGET_CATEGORY=linear        # linear, spot, inverse
PRICE_TARGET_PRICE=                 # Target Price (>=)
PRICE_TARGET_MIN_PRICE=             # Min Price (<)
PRICE_TARGET_MAX_PRICE=             # Max Price (>)
PRICE_TARGET_CHECK_INTERVAL=1

# ------------------------------------------
# 5. Dynamic Price Monitors (Multiple)
# ------------------------------------------
# Monitor 1
SYMBOL1_PRICE_ENABLED=false
SYMBOL1_PRICE_EXCHANGE=bybit
SYMBOL1_PRICE_SYMBOL=AAVEUSDT
SYMBOL1_PRICE_CATEGORY=linear
SYMBOL1_PRICE_MIN=150
SYMBOL1_PRICE_MAX=180
SYMBOL1_PRICE_CHECK_INTERVAL=1

# Monitor 2
# SYMBOL2_PRICE_ENABLED=false
# SYMBOL2_PRICE_SYMBOL=ETHUSDT
# ...
